{% macro generate_ini(config) %}
{% for section, options in config.items() %}

[{{ section }}]
{% for option, value in options.items() %}
{% if value is number %}
{{ option }} = "{{ value }}"
{% elif value is iterable and (value is not string and value is not mapping) %}
{{ option }} = "{{ value | join(', ') }}"
{% elif value|first == "!" %}
{{ option }} = {{ value | quote }}
{% elif value is string and "=" in value %}
{{ option }} = {{ value | quote }}
{% else %}
{{ option }} = {{ value }}
{% endif %}
{% endfor %}
{% endfor %}
{% endmacro %}
